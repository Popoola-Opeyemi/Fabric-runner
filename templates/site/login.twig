{% extends "site/base.layout.twig" %}


{% block content %}

<section class="login">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <div class="">
        <h1 class="text-center mb-5 ws-8">Visitors' Area</h1>
        <div class="row">
          <div class="col-md-2"></div>
          <div class="col-md-8">
              {% if error %} 
              <div class="alert alert-warning m-3" role="alert">
                  <i class="fa fa-exclamation-circle"></i>&nbsp;
                  <strong> {{ error }} </strong>
              </div>
              {% endif %}

              {% if success %} 
              <div class="alert alert-success m-3" role="alert">
                  <i class="fa fa-exclamation-circle"></i>&nbsp;
                  <strong> {{ success }} </strong>
              </div>
              {% endif %}

            <form action="{{ path_for('postSubscriberLogin') }}" method="post" class="pl-3 pr-3">
                <div class="input-group mb-4">
                  <span class="input-group-btn">
                      <button type="button" class="btn"><i class="fa fa-2x fa-user"></i></button> 
                  </span>
                  <input type="email" name="email" value="{{ old.email }}" class="form-control {{ errors.email ? 'has-error' : '' }}" id="exampleInputAmount" placeholder="Email">
                </div>
                {% if errors.email %} 
                <small class="red">{{ errors.email }}</small>
                {% endif %}

                
                <div class="input-group">
                  <span class="input-group-btn">
                      <button type="button" class="btn"><i class="fa fa-2x fa-lock"></i></button> 
                  </span>
                  <input name="password" type="password" class="form-control {{ errors.password ? 'has-error' : '' }}" id="exampleInputAmount" placeholder="Password">
                </div>
                {% if errors.password %} 
                <small class="red">{{ errors.password }}</small>
                {% endif %}

                

                <div class="row"> 
                  <div class="col-md-12">
                    <div class="mt-4 login-button text-center">
                        <input class="btn btn-primary btn-md btn-login btn-block"  type="submit" value="Login">
                    </div>                        
                  </div>                                  
                </div><!--  end of .login-button  -->
                
                <div class="Link mt-3 d-flex justify-content-center">
                    <a class="" href="{{ path_for('signUpPage') }}">Request Access</a>
                </div>

               
            </form>
          </div>
          <div class="col-md-2"></div>
        </div>
      </div>
    </div>
    <div class="col-md-2">
    </div>
  </div>    
</section><!--  end of .login  -->

{% endblock %}
