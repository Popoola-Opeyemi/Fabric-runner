{% extends "site/base.layout.twig" %}


{% block content %}

 <section class="login">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
          <div class="p-5">
              <h1 class="text-center mb-3">Recover &nbsp; Password</h1>
              {% if error %} 
              <div class="alert alert-danger mt-0" role="alert">
                 
                  <i class="fa fa-exclamation-circle"></i>&nbsp;
                  <strong> {{ error }} </strong>
              </div>
              {% endif %}
              {% if success %} 
              <div class="alert alert-success" role="alert">
                 
                  <i class="fa fa-exclamation-circle"></i>&nbsp;
                  <strong> {{ success }} </strong>
              </div>
              {% endif %}
              <form action="{{ path_for('postSubscriberPasswordReset') }}" method="post">
                  <div class="form-group">
                      <!-- todo => use input group for the username-->
                      <input class="form-control" 
                              type="email" placeholder="Email address used to create your account" 
                              id="email" 
                              value="{{ old.email }}"
                              name="email" /> 
                  </div>
                  <div class="form-group">
                      <input type="submit" class="btn btn-block btn-primary" value="Submit">
                  </div> 
                  <small class="text-muted" >A link will be sent to your email, please follow the link to reset your password. 
                    <b>Link expires after an hour.</b>
                  </small>
                  <hr>
                  <a class="btn btn-secondary btn-block" href="{{ path_for('loginPage') }}">Back</a>  
              </form>  

            </div>
      </div>
      <div class="col-md-3"></div>
    </div>    
</section>

{% endblock %}
