{% extends "site/base.layout.twig" %}


{% block content %}

 <section class="login">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
          <div class="fieldset p-5">
              <h1 class="text-center">Reset &nbsp; Password</h1>
              {% if error %} 
              <div class="alert alert-danger mt-0" role="alert">
                  <i class="fa fa-exclamation-circle"></i>&nbsp;
                  <strong> {{ error }} </strong>
              </div>
              {% endif %}
              {% if success %} 
              <div class="alert alert-success" role="alert">
                  <i class="fa fa-exclamation-circle"></i>&nbsp;
                  <strong> {{ success }} </strong>
              </div>
              {% endif %}

              <form action="{{ path_for('passwordResetUpdate', { 'token': token }) }}" method="post">
                  <div class="form-group">
                      <label for="password1">Password</label> 
                      <input class="form-control" 
                            type="password" 
                            placeholder="New password" 
                            id="password1" 
                            name="password1" required>
                  </div>
                  <div class="form-group">
                      <label for="password2">Confirm Password</label> 
                      <input class="form-control {{ errors.no_match ? 'has-error' : ''}}" 
                            type="password" 
                            placeholder="Re-type password"
                            id="password2" 
                            name="password2" required>
                      {% if errors.no_match %}
                      <small class="red">{{ errors.no_match }}</small>
                      {% endif %}
                  </div>
                  <div class="form-group">
                      <input type="submit" class="btn btn-block btn-primary mt-4" value="Reset">
                  </div> 
                </form> 
            </div>
      </div>
      <div class="col-md-3"></div>
    </div>    
</section>

{% endblock %}
